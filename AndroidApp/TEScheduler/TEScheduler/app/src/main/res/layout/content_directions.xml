<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/directions_top_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ericsson.project.tescheduler.DirectionsActivity"
    tools:showIn="@layout/activity_directions">
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/directions_rva"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/directions_left_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/directions_backtomap"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:onClick="navigateToMap"/>
</LinearLayout>