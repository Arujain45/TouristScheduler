<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.LargeText">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large
        </item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.InputText">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.LabelText">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
    </style>

    <style name="AppTheme.BlackText">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.ColoredButton" parent="Widget.AppCompat.Button.Colored">

    </style>

</resources>
