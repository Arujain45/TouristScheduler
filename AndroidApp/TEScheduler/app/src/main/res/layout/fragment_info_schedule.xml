<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_info_schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_monday"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_tuesday"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_wednesday"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_thursday"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/info_open1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_openingtime"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/info_open2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_openingtime"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/info_open3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_openingtime"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/info_open4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_openingtime"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_large"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_friday"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_saturday"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_sunday"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/label_specialdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/day_special"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:clickable="true"
            android:onClick="showSpecialDaysFragment"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/info_open5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_openingtime"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/info_open6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_openingtime"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/info_open7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_openingtime"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>